<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F4F4F1" />
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#ECEDE8" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SurfaceMutedBrush" Color="#F6F6F3" />
    <SolidColorBrush x:Key="SurfaceRaisedBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SurfaceContrastBrush" Color="#EEF0EA" />
    <SolidColorBrush x:Key="BorderBrush" Color="#D4D8CF" />
    <SolidColorBrush x:Key="BorderStrongBrush" Color="#BCC4B8" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#222823" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#596358" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#727D72" />

    <SolidColorBrush x:Key="AccentBrush" Color="#3F6C4E" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#355E44" />
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#2A4C36" />
    <SolidColorBrush x:Key="AccentSubtleBrush" Color="#E9EFE9" />
    <SolidColorBrush x:Key="AccentGlowBrush" Color="#C2D1C3" />

    <SolidColorBrush x:Key="SuccessBrush" Color="#3F7A52" />
    <SolidColorBrush x:Key="WarningBrush" Color="#9B6C2D" />
    <SolidColorBrush x:Key="DangerBrush" Color="#B44B45" />
    <SolidColorBrush x:Key="DangerSubtleBrush" Color="#FBECEA" />

    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#F4F7F2" />
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#E9EEE8" />
    <SolidColorBrush x:Key="InputFocusedBackgroundBrush" Color="#FBFCF9" />

    <SolidColorBrush x:Key="DangerBorderBrush" Color="#E8B8B4" />
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#F7DDD9" />
    <SolidColorBrush x:Key="DangerHoverBorderBrush" Color="#D89088" />
    <SolidColorBrush x:Key="DangerPressedBrush" Color="#F1CDC8" />

    <SolidColorBrush x:Key="SidebarHoverBrush" Color="#E5EBE2" />
    <SolidColorBrush x:Key="SidebarPressedBrush" Color="#DAE2D8" />
    <SolidColorBrush x:Key="SidebarActiveBackgroundBrush" Color="#DFE8DE" />
    <SolidColorBrush x:Key="SidebarActiveBorderBrush" Color="#B1C3AF" />

    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="#EDF2EA" />
    <SolidColorBrush x:Key="TabHoverBorderBrush" Color="#D2DECF" />
    <SolidColorBrush x:Key="TabSelectedBorderBrush" Color="#BACCB8" />

    <SolidColorBrush x:Key="ListItemHoverBackgroundBrush" Color="#EFF4EC" />
    <SolidColorBrush x:Key="ListItemHoverBorderBrush" Color="#D1DECE" />
    <SolidColorBrush x:Key="ListItemSelectedBorderBrush" Color="#B7C9B5" />

    <SolidColorBrush x:Key="ApprovalCardBorderBrush" Color="#D2BE8B" />
    <SolidColorBrush x:Key="ApprovalCardBackgroundBrush" Color="#FBF6E8" />
    <SolidColorBrush x:Key="ApprovalInputBackgroundBrush" Color="#F9F5EA" />

    <SolidColorBrush x:Key="ToastInfoBackgroundBrush" Color="#ECF3EC" />
    <SolidColorBrush x:Key="ToastInfoBorderBrush" Color="#BDD1BE" />
    <SolidColorBrush x:Key="ToastErrorBackgroundBrush" Color="#FFF0EE" />
    <SolidColorBrush x:Key="ToastErrorBorderBrush" Color="#F0BBB6" />

    <SolidColorBrush x:Key="HeroBlobBrushA" Color="#1A8AA57A" />
    <SolidColorBrush x:Key="HeroBlobBrushB" Color="#17958B6F" />
    <SolidColorBrush x:Key="HeroBlobBrushC" Color="#149C8A5E" />
    <SolidColorBrush x:Key="DialogBlobBrush" Color="#1A8EA17A" />

    <LinearGradientBrush x:Key="MainBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F8F9F6" Offset="0" />
        <GradientStop Color="#F2F4EF" Offset="0.45" />
        <GradientStop Color="#ECEFE7" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F9FAF7" Offset="0" />
        <GradientStop Color="#EEF1EA" Offset="1" />
    </LinearGradientBrush>

    <DropShadowEffect x:Key="CardShadowEffect"
                      BlurRadius="20"
                      ShadowDepth="0"
                      Direction="270"
                      Color="#26000000" />

    <DropShadowEffect x:Key="FloatingShadowEffect"
                      BlurRadius="18"
                      ShadowDepth="0"
                      Direction="270"
                      Color="#22000000" />
</ResourceDictionary>
