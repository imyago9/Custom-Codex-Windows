<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:imaging="clr-namespace:System.Windows.Media.Imaging;assembly=PresentationCore">
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#14171D" />
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#1A202B" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#222936" />
    <SolidColorBrush x:Key="SurfaceMutedBrush" Color="#263040" />
    <SolidColorBrush x:Key="SurfaceRaisedBrush" Color="#242D3A" />
    <SolidColorBrush x:Key="SurfaceContrastBrush" Color="#2E394A" />
    <SolidColorBrush x:Key="BorderBrush" Color="#445065" />
    <SolidColorBrush x:Key="BorderStrongBrush" Color="#586780" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E9EEF8" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B7C1D4" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#91A0B8" />

    <SolidColorBrush x:Key="AccentBrush" Color="#4F7FD7" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#466FC0" />
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#3B5EA4" />
    <SolidColorBrush x:Key="AccentSubtleBrush" Color="#2D3952" />
    <SolidColorBrush x:Key="AccentGlowBrush" Color="#88AAE8" />

    <SolidColorBrush x:Key="SuccessBrush" Color="#59BFA8" />
    <SolidColorBrush x:Key="WarningBrush" Color="#C59C62" />
    <SolidColorBrush x:Key="DangerBrush" Color="#E58A83" />
    <SolidColorBrush x:Key="DangerSubtleBrush" Color="#4A3533" />

    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#303B4C" />
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#384559" />
    <SolidColorBrush x:Key="InputFocusedBackgroundBrush" Color="#324056" />

    <SolidColorBrush x:Key="DangerBorderBrush" Color="#8C605C" />
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#5A403D" />
    <SolidColorBrush x:Key="DangerHoverBorderBrush" Color="#B37B75" />
    <SolidColorBrush x:Key="DangerPressedBrush" Color="#664946" />

    <SolidColorBrush x:Key="SidebarHoverBrush" Color="#313C4E" />
    <SolidColorBrush x:Key="SidebarButtonHoverNeutralBrush" Color="#2D333D" />
    <SolidColorBrush x:Key="SidebarPressedBrush" Color="#374458" />
    <SolidColorBrush x:Key="SidebarActiveBackgroundBrush" Color="#394A66" />
    <SolidColorBrush x:Key="SidebarActiveBorderBrush" Color="#6D89BF" />

    <SolidColorBrush x:Key="WorkspaceHeaderGlassOuterBackgroundBrush" Color="#4A252A32" />
    <SolidColorBrush x:Key="WorkspaceHeaderGlassOuterBorderBrush" Color="#6B778C" />
    <SolidColorBrush x:Key="WorkspaceHeaderGlassInnerBorderBrush" Color="#2EFFFFFF" />
    <SolidColorBrush x:Key="WorkspaceHeaderGlassQuickHoverBackgroundBrush" Color="#2EFFFFFF" />
    <SolidColorBrush x:Key="WorkspaceHeaderGlassQuickHoverBorderBrush" Color="#36FFFFFF" />
    <SolidColorBrush x:Key="WorkspaceHeaderGlassQuickPressedBackgroundBrush" Color="#42FFFFFF" />
    <SolidColorBrush x:Key="WorkspaceHeaderGlassQuickPressedBorderBrush" Color="#46FFFFFF" />

    <SolidColorBrush x:Key="TurnInputGlassOuterBackgroundBrush" Color="#4221262D" />
    <SolidColorBrush x:Key="TurnInputGlassOuterBorderBrush" Color="#6B778C" />
    <SolidColorBrush x:Key="TurnInputGlassInnerBorderBrush" Color="#24FFFFFF" />

    <LinearGradientBrush x:Key="WorkspaceHeaderGlassFillBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#56343B46" Offset="0" />
        <GradientStop Color="#48303943" Offset="0.45" />
        <GradientStop Color="#3A2A313B" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WorkspaceHeaderGlassSheenBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00FFFFFF" Offset="0" />
        <GradientStop Color="#00FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="TurnInputGlassFillBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#4A303741" Offset="0" />
        <GradientStop Color="#40303942" Offset="0.42" />
        <GradientStop Color="#32262D36" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="TurnInputGlassSheenBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00FFFFFF" Offset="0" />
        <GradientStop Color="#00FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="#313C4D" />
    <SolidColorBrush x:Key="TabHoverBorderBrush" Color="#4C5F7B" />
    <SolidColorBrush x:Key="TabSelectedBorderBrush" Color="#7A9ADB" />

    <SolidColorBrush x:Key="ListItemHoverBackgroundBrush" Color="#313B4B" />
    <SolidColorBrush x:Key="ListItemHoverBorderBrush" Color="#4B5E78" />
    <SolidColorBrush x:Key="ListItemSelectedBorderBrush" Color="#7593CF" />

    <SolidColorBrush x:Key="ApprovalCardBorderBrush" Color="#8B7A55" />
    <SolidColorBrush x:Key="ApprovalCardBackgroundBrush" Color="#463F31" />
    <SolidColorBrush x:Key="ApprovalInputBackgroundBrush" Color="#393327" />

    <SolidColorBrush x:Key="ToastInfoBackgroundBrush" Color="#2A3547" />
    <SolidColorBrush x:Key="ToastInfoBorderBrush" Color="#5975A8" />
    <SolidColorBrush x:Key="ToastErrorBackgroundBrush" Color="#4D3634" />
    <SolidColorBrush x:Key="ToastErrorBorderBrush" Color="#8D625E" />

    <SolidColorBrush x:Key="HeroBlobBrushA" Color="#16355C8A" />
    <SolidColorBrush x:Key="HeroBlobBrushB" Color="#143D73A6" />
    <SolidColorBrush x:Key="HeroBlobBrushC" Color="#144B7B8F" />
    <SolidColorBrush x:Key="DialogBlobBrush" Color="#183D6486" />

    <LinearGradientBrush x:Key="MainBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#151A23" Offset="0" />
        <GradientStop Color="#121824" Offset="0.45" />
        <GradientStop Color="#111722" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#171D28" Offset="0" />
        <GradientStop Color="#121823" Offset="1" />
    </LinearGradientBrush>

    <ImageBrush x:Key="AppShellBackgroundImageBrush"
                ImageSource="pack://application:,,,/Assets/dark-background.png"
                Stretch="UniformToFill"
                AlignmentX="Center"
                AlignmentY="Center" />

    <imaging:BitmapImage x:Key="WorkspaceTerminalIconImageSource"
                         UriSource="pack://application:,,,/Assets/terminal-white.png" />
    <imaging:BitmapImage x:Key="WorkspaceGitIconImageSource"
                         UriSource="pack://application:,,,/Assets/git-white.png" />
    <imaging:BitmapImage x:Key="WorkspaceTimeToBuildEmptyStateImageSource"
                         UriSource="pack://application:,,,/Assets/timetobuild-white.png" />

    <BlurEffect x:Key="SidebarBackdropBlurEffect"
                Radius="16" />

    <DropShadowEffect x:Key="CardShadowEffect"
                      BlurRadius="20"
                      ShadowDepth="0"
                      Direction="270"
                      Color="#66000000" />

    <DropShadowEffect x:Key="FloatingShadowEffect"
                      BlurRadius="18"
                      ShadowDepth="0"
                      Direction="270"
                      Color="#7A000000" />
</ResourceDictionary>
