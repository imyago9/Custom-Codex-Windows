<Window x:Class="CodexNativeAgent.Ui.QuestionPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Required"
        Width="620"
        Height="360"
        MinWidth="500"
        MinHeight="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        FontFamily="Segoe UI, Segoe UI Variable Text"
        Background="{DynamicResource AppBackgroundBrush}">
    <Window.Resources />

    <Grid Background="{DynamicResource WindowBackgroundGradient}" Margin="16">
        <Ellipse Width="220"
                 Height="220"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,-120,-100,0"
                 Fill="{DynamicResource DialogBlobBrush}"
                 IsHitTestVisible="False" />

        <Border Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="14"
                Padding="14"
                Effect="{DynamicResource CardShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{DynamicResource SurfaceMutedBrush}"
                        BorderBrush="{DynamicResource AccentGlowBrush}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="12,9"
                        Margin="0,0,0,12">
                    <TextBlock x:Name="LblPrompt"
                               Text="Provide input:"
                               TextWrapping="Wrap"
                               FontSize="14.2"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextSecondaryBrush}" />
                </Border>

                <ComboBox x:Name="CmbOptions"
                          Grid.Row="1"
                          Margin="0,0,0,12"
                          Visibility="Collapsed" />

                <Grid Grid.Row="2" Margin="0,0,0,14">
                    <TextBox x:Name="TxtAnswer"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" />
                    <PasswordBox x:Name="PwdAnswer"
                                 Visibility="Collapsed" />
                </Grid>

                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="BtnCancel"
                            Content="Cancel"
                            Width="102"
                            Margin="0,0,8,0"
                            Style="{StaticResource ButtonBaseStyle}"
                            IsCancel="True" />
                    <Button x:Name="BtnOk"
                            Content="Submit"
                            Width="108"
                            Style="{StaticResource PrimaryButtonStyle}"
                            IsDefault="True" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
