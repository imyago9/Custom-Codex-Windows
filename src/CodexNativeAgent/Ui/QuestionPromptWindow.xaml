<Window x:Class="CodexNativeAgent.Ui.QuestionPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Required"
        Width="560"
        Height="300"
        MinWidth="460"
        MinHeight="260"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="LblPrompt"
                   Grid.Row="0"
                   Text="Provide input:"
                   Margin="0,0,0,8"
                   TextWrapping="Wrap" />

        <ComboBox x:Name="CmbOptions"
                  Grid.Row="1"
                  Margin="0,0,0,8"
                  Visibility="Collapsed" />

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <TextBox x:Name="TxtAnswer"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" />
            <PasswordBox x:Name="PwdAnswer"
                         Visibility="Collapsed" />
        </Grid>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="BtnCancel"
                    Content="Cancel"
                    Width="92"
                    Margin="0,0,8,0"
                    IsCancel="True" />
            <Button x:Name="BtnOk"
                    Content="OK"
                    Width="92"
                    IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
