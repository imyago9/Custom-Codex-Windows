<UserControl x:Class="CodexNativeAgent.Ui.WorkspacePaneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
            <Border
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="{DynamicResource MainShellPadding}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            CornerRadius="14"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource WorkspaceHeaderGlassOuterBorderBrush}"
                            Background="{DynamicResource WorkspaceHeaderGlassOuterBackgroundBrush}"
                            Margin="0,0,0,12">
                        <Grid>
                            <Border Style="{x:Null}"
                                    CornerRadius="14"
                                    Background="{x:Null}"
                                    BorderBrush="{DynamicResource WorkspaceHeaderGlassInnerBorderBrush}"
                                    BorderThickness="1"
                                    Margin="1" />
                            <Border Style="{x:Null}"
                                    CornerRadius="13"
                                    Margin="1"
                                    Opacity="0.95">
                                <Border.Background>
                                    <DynamicResource ResourceKey="WorkspaceHeaderGlassFillBrush" />
                                </Border.Background>
                            </Border>
                            <Border Style="{x:Null}"
                                    CornerRadius="13"
                                    Margin="1"
                                    VerticalAlignment="Top"
                                    Height="20"
                                    IsHitTestVisible="False">
                                <Border.Background>
                                    <DynamicResource ResourceKey="WorkspaceHeaderGlassSheenBrush" />
                                </Border.Background>
                            </Border>

                            <DockPanel Margin="14,12">
                                <StackPanel DockPanel.Dock="Left">
                                    <TextBlock x:Name="LblCurrentThread" Text="{Binding CurrentThreadText}" FontSize="20" FontWeight="SemiBold" />
                                    <TextBlock x:Name="LblCurrentTurn"
                                               Text="{Binding CurrentTurnText}"
                                               Margin="0,3,0,0"
                                               Style="{StaticResource CaptionTextStyle}"
                                               Visibility="Collapsed" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                                    <StackPanel.Resources>
                                        <Style x:Key="QuickIconButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="MinWidth" Value="34" />
                                            <Setter Property="MinHeight" Value="34" />
                                            <Setter Property="Padding" Value="6" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Border x:Name="QuickIconButtonGlass"
                                                                    CornerRadius="10"
                                                                    Background="Transparent"
                                                                    BorderBrush="Transparent"
                                                                    BorderThickness="1" />
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"
                                                                              Margin="{TemplateBinding Padding}" />
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="QuickIconButtonGlass" Property="Background" Value="{DynamicResource WorkspaceHeaderGlassQuickHoverBackgroundBrush}" />
                                                                <Setter TargetName="QuickIconButtonGlass" Property="BorderBrush" Value="{DynamicResource WorkspaceHeaderGlassQuickHoverBorderBrush}" />
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="QuickIconButtonGlass" Property="Background" Value="{DynamicResource WorkspaceHeaderGlassQuickPressedBackgroundBrush}" />
                                                                <Setter TargetName="QuickIconButtonGlass" Property="BorderBrush" Value="{DynamicResource WorkspaceHeaderGlassQuickPressedBorderBrush}" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </StackPanel.Resources>
                                    <Button x:Name="BtnQuickOpenVsc"
                                            Style="{StaticResource QuickIconButtonStyle}"
                                            ToolTip="Open in VS Code"
                                            Margin="0,0,6,0"
                                            IsEnabled="{Binding IsQuickOpenVscEnabled}">
                                        <Image Source="pack://application:,,,/Assets/vs-code.png"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    </Button>
                                    <Button x:Name="BtnQuickOpenTerminal"
                                            Style="{StaticResource QuickIconButtonStyle}"
                                            ToolTip="Open PowerShell here"
                                            Margin="0,0,6,0"
                                            IsEnabled="{Binding IsQuickOpenTerminalEnabled}">
                                        <Image Source="{DynamicResource WorkspaceTerminalIconImageSource}"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    </Button>
                                    <Button x:Name="BtnQuickOpenGit"
                                            Style="{StaticResource QuickIconButtonStyle}"
                                            ToolTip="Toggle Git panel"
                                            IsEnabled="{Binding IsQuickOpenTerminalEnabled}">
                                        <Image Source="{DynamicResource WorkspaceGitIconImageSource}"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    </Button>
                                </StackPanel>
                            </DockPanel>
                        </Grid>
                    </Border>

                    <Border x:Name="WorkspaceHintBanner"
                            Grid.Row="1"
                            Background="{DynamicResource AccentSubtleBrush}"
                            BorderBrush="{DynamicResource AccentGlowBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="11,8"
                            Margin="0,0,0,12">
                        <TextBlock x:Name="LblWorkspaceHint"
                                   Text="{Binding WorkspaceHintText}"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </Border>

                    <Border Grid.Row="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="10"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Image x:Name="ImgTimeToBuildEmptyState"
                                       Source="{DynamicResource WorkspaceTimeToBuildEmptyStateImageSource}"
                                       Visibility="Collapsed"
                                       IsHitTestVisible="False"
                                       Stretch="Uniform"
                                       Opacity="0.9"
                                       MaxWidth="520"
                                       MaxHeight="320"
                                       Margin="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                                <Border x:Name="WorkspaceHintOverlay"
                                        Visibility="Collapsed"
                                        Panel.ZIndex="9"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Margin="16"
                                        MaxWidth="720"
                                        Background="{DynamicResource AccentSubtleBrush}"
                                        BorderBrush="{DynamicResource AccentGlowBrush}"
                                        BorderThickness="1"
                                        CornerRadius="11"
                                        Padding="12,10">
                                    <DockPanel LastChildFill="True">
                                        <Button x:Name="BtnDismissWorkspaceHintOverlay"
                                                DockPanel.Dock="Right"
                                                Width="18"
                                                Height="18"
                                                MinWidth="18"
                                                MinHeight="18"
                                                Margin="8,0,0,0"
                                                Padding="0"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Dismiss hint">
                                            <TextBlock Text="x"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Button>

                                        <TextBlock x:Name="LblWorkspaceHintOverlay"
                                                   Text="{Binding WorkspaceHintText}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,2,0" />
                                    </DockPanel>
                                </Border>

                                <ListBox x:Name="LstTranscript"
                                     ItemsSource="{Binding TranscriptPanel.Items}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     HorizontalContentAlignment="Stretch"
                                     ScrollViewer.CanContentScroll="False"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     SelectionMode="Single">
                                <ListBox.Resources>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Focusable" Value="False" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <Style x:Key="TranscriptBadgeTextStyle" TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="11.5" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                    </Style>
                                    <Style x:Key="TranscriptBodyTextStyle" TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                        <Setter Property="FontFamily" Value="{Binding BodyFontFamily}" />
                                        <Setter Property="LineHeight" Value="20" />
                                    </Style>
                                </ListBox.Resources>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,10" Opacity="{Binding RowOpacity}">
                                            <Grid x:Name="BubbleRow">
                                                <Border x:Name="BubbleChrome"
                                                        HorizontalAlignment="Left"
                                                        MaxWidth="760"
                                                        Padding="12,10"
                                                        CornerRadius="14"
                                                        Background="{DynamicResource SurfaceMutedBrush}"
                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                        BorderThickness="1">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="False" Margin="0,0,0,5">
                                                            <TextBlock Text="{Binding TimestampText}"
                                                                       DockPanel.Dock="Right"
                                                                       Visibility="{Binding TimestampVisibility}"
                                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                                       FontSize="11" />
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding RoleText}"
                                                                           Visibility="{Binding RoleVisibility}"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"
                                                                           Margin="0,0,6,0" />
                                                                <TextBlock Text="{Binding StreamingIndicatorText}"
                                                                           Visibility="{Binding StreamingIndicatorVisibility}"
                                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                                           FontSize="11" />
                                                            </StackPanel>
                                                        </DockPanel>

                                                        <TextBlock Text="{Binding BodyText}"
                                                                   Style="{StaticResource TranscriptBodyTextStyle}" />

                                                        <TextBlock Text="{Binding SecondaryText}"
                                                                   Visibility="{Binding SecondaryVisibility}"
                                                                   Margin="0,5,0,0"
                                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                                   FontSize="11.5" />

                                                        <Border x:Name="BubbleDetailsChrome"
                                                                Visibility="{Binding DetailsVisibility}"
                                                                Margin="0,8,0,0"
                                                                Padding="10,8"
                                                                Background="{DynamicResource SurfaceBrush}"
                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="10">
                                                            <TextBlock Text="{Binding DetailsText}"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       FontFamily="{Binding DetailsFontFamily}"
                                                                       TextWrapping="Wrap"
                                                                       LineHeight="18" />
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>

                                            <Grid x:Name="ActivityRow" Visibility="Collapsed" Margin="2,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="18" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0">
                                                    <Border x:Name="ActivityLine"
                                                            Width="2"
                                                            CornerRadius="1"
                                                            Background="{DynamicResource BorderBrush}"
                                                            Opacity="0.55"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,16,0,0" />
                                                    <Ellipse x:Name="ActivityDot"
                                                             Width="8"
                                                             Height="8"
                                                             Fill="{DynamicResource TextTertiaryBrush}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Top"
                                                             Margin="0,8,0,0" />
                                                </Grid>

                                                <Border x:Name="ActivityChrome"
                                                        Grid.Column="1"
                                                        Padding="10,8"
                                                        CornerRadius="10"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        BorderThickness="1"
                                                        MaxWidth="860"
                                                        HorizontalAlignment="Left">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="False" Margin="0,0,0,4">
                                                            <TextBlock Text="{Binding TimestampText}"
                                                                       DockPanel.Dock="Right"
                                                                       Visibility="{Binding TimestampVisibility}"
                                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                                       FontSize="11" />
                                                            <StackPanel Orientation="Horizontal"
                                                                        DockPanel.Dock="Right"
                                                                        Margin="0,0,8,0"
                                                                        Visibility="{Binding ChangeStatsVisibility}">
                                                                <TextBlock Text="{Binding AddedLinesText}"
                                                                           Visibility="{Binding AddedLinesVisibility}"
                                                                           Foreground="{DynamicResource SuccessBrush}"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"
                                                                           Margin="0,0,8,0" />
                                                                <TextBlock Text="{Binding RemovedLinesText}"
                                                                           Visibility="{Binding RemovedLinesVisibility}"
                                                                           Foreground="{DynamicResource DangerBrush}"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold" />
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding RoleText}"
                                                                           Visibility="{Binding RoleVisibility}"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                           FontSize="11"
                                                                           FontWeight="SemiBold"
                                                                           Margin="0,0,6,0" />
                                                                <TextBlock Text="{Binding StreamingIndicatorText}"
                                                                           Visibility="{Binding StreamingIndicatorVisibility}"
                                                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                                                           FontSize="11" />
                                                            </StackPanel>
                                                        </DockPanel>

                                                        <Border x:Name="ActivityBodyChip"
                                                                Padding="8,6"
                                                                CornerRadius="8"
                                                                Background="{DynamicResource SurfaceMutedBrush}"
                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                BorderThickness="1">
                                                            <TextBlock Text="{Binding BodyText}"
                                                                       Style="{StaticResource TranscriptBodyTextStyle}"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                                        </Border>

                                                        <TextBlock Text="{Binding SecondaryText}"
                                                                   Visibility="{Binding SecondaryVisibility}"
                                                                   Margin="0,5,0,0"
                                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                                   FontSize="11.5" />

                                                        <Button Visibility="{Binding DetailsToggleVisibility}"
                                                                Command="{Binding ToggleDetailsCommand}"
                                                                Style="{StaticResource ButtonBaseStyle}"
                                                                Margin="0,8,0,0"
                                                                Padding="8,3"
                                                                MinHeight="24"
                                                                HorizontalAlignment="Left">
                                                            <TextBlock Text="{Binding DetailsToggleText}"
                                                                       FontSize="11.5"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                                        </Button>

                                                        <Border x:Name="ActivityDetailsChrome"
                                                                Visibility="{Binding DetailsVisibility}"
                                                                Margin="0,8,0,0"
                                                                Padding="10,8"
                                                                Background="{DynamicResource SurfaceBrush}"
                                                                BorderBrush="{DynamicResource BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="10">
                                                            <TextBlock Text="{Binding DetailsText}"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                                       FontFamily="{Binding DetailsFontFamily}"
                                                                       TextWrapping="Wrap"
                                                                       LineHeight="18" />
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>

                                        </Grid>

                                        <DataTemplate.Triggers>
                                                <!-- Activity/timeline rows -->
                                                <DataTrigger Binding="{Binding Kind}" Value="command">
                                                    <Setter TargetName="BubbleRow" Property="Visibility" Value="Collapsed" />
                                                    <Setter TargetName="ActivityRow" Property="Visibility" Value="Visible" />
                                                    <Setter TargetName="ActivityDot" Property="Fill" Value="{DynamicResource AccentBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="Background" Value="{DynamicResource SurfaceMutedBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="BorderBrush" Value="{DynamicResource BorderStrongBrush}" />
                                                    <Setter TargetName="ActivityBodyChip" Property="Background" Value="{DynamicResource SurfaceContrastBrush}" />
                                                    <Setter TargetName="ActivityBodyChip" Property="BorderBrush" Value="{DynamicResource BorderStrongBrush}" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Kind}" Value="fileChange">
                                                    <Setter TargetName="BubbleRow" Property="Visibility" Value="Collapsed" />
                                                    <Setter TargetName="ActivityRow" Property="Visibility" Value="Visible" />
                                                    <Setter TargetName="ActivityDot" Property="Fill" Value="{DynamicResource AccentGlowBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="Background" Value="{DynamicResource SurfaceMutedBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Kind}" Value="plan">
                                                    <Setter TargetName="BubbleRow" Property="Visibility" Value="Collapsed" />
                                                    <Setter TargetName="ActivityRow" Property="Visibility" Value="Visible" />
                                                    <Setter TargetName="ActivityDot" Property="Fill" Value="{DynamicResource AccentBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="Background" Value="{DynamicResource AccentSubtleBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="BorderBrush" Value="{DynamicResource BorderStrongBrush}" />
                                                    <Setter TargetName="ActivityBodyChip" Property="Background" Value="Transparent" />
                                                    <Setter TargetName="ActivityBodyChip" Property="BorderBrush" Value="Transparent" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Kind}" Value="reasoning">
                                                    <Setter TargetName="BubbleRow" Property="Visibility" Value="Collapsed" />
                                                    <Setter TargetName="ActivityRow" Property="Visibility" Value="Visible" />
                                                    <Setter TargetName="ActivityDot" Property="Fill" Value="{DynamicResource TextTertiaryBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="Background" Value="Transparent" />
                                                    <Setter TargetName="ActivityChrome" Property="BorderBrush" Value="Transparent" />
                                                    <Setter TargetName="ActivityBodyChip" Property="Background" Value="Transparent" />
                                                    <Setter TargetName="ActivityBodyChip" Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                                    <Setter TargetName="ActivityBodyChip" Property="Opacity" Value="0.9" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Kind}" Value="system">
                                                    <Setter TargetName="BubbleRow" Property="Visibility" Value="Collapsed" />
                                                    <Setter TargetName="ActivityRow" Property="Visibility" Value="Visible" />
                                                    <Setter TargetName="ActivityDot" Property="Fill" Value="{DynamicResource TextTertiaryBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="Background" Value="Transparent" />
                                                    <Setter TargetName="ActivityChrome" Property="BorderBrush" Value="Transparent" />
                                                    <Setter TargetName="ActivityBodyChip" Property="Background" Value="Transparent" />
                                                    <Setter TargetName="ActivityBodyChip" Property="BorderBrush" Value="Transparent" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Kind}" Value="event">
                                                    <Setter TargetName="BubbleRow" Property="Visibility" Value="Collapsed" />
                                                    <Setter TargetName="ActivityRow" Property="Visibility" Value="Visible" />
                                                    <Setter TargetName="ActivityDot" Property="Fill" Value="{DynamicResource TextTertiaryBrush}" />
                                                    <Setter TargetName="ActivityChrome" Property="Background" Value="Transparent" />
                                                    <Setter TargetName="ActivityChrome" Property="BorderBrush" Value="Transparent" />
                                                    <Setter TargetName="ActivityBodyChip" Property="Background" Value="Transparent" />
                                                    <Setter TargetName="ActivityBodyChip" Property="BorderBrush" Value="Transparent" />
                                                </DataTrigger>

                                                <!-- Conversation bubbles -->
                                                <DataTrigger Binding="{Binding Kind}" Value="assistant">
                                                    <Setter TargetName="BubbleChrome" Property="Background" Value="{DynamicResource SurfaceMutedBrush}" />
                                                    <Setter TargetName="BubbleChrome" Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding RoleText}" Value="You">
                                                    <Setter TargetName="BubbleChrome" Property="HorizontalAlignment" Value="Right" />
                                                    <Setter TargetName="BubbleChrome" Property="Background" Value="{DynamicResource AccentSubtleBrush}" />
                                                    <Setter TargetName="BubbleChrome" Property="BorderBrush" Value="{DynamicResource AccentGlowBrush}" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding RoleText}" Value="Steer">
                                                    <Setter TargetName="BubbleChrome" Property="HorizontalAlignment" Value="Right" />
                                                    <Setter TargetName="BubbleChrome" Property="Background" Value="{DynamicResource SurfaceContrastBrush}" />
                                                    <Setter TargetName="BubbleChrome" Property="BorderBrush" Value="{DynamicResource AccentGlowBrush}" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding Kind}" Value="error">
                                                    <Setter TargetName="BubbleChrome" Property="Background" Value="{DynamicResource ToastErrorBackgroundBrush}" />
                                                    <Setter TargetName="BubbleChrome" Property="BorderBrush" Value="{DynamicResource ToastErrorBorderBrush}" />
                                                </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Hidden raw transcript buffer is retained for diagnostics/export and compatibility paths. -->
                            <TextBox x:Name="TxtTranscript"
                                     Grid.Column="0"
                                     Visibility="Collapsed"
                                     IsReadOnly="True"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     Text="{Binding TranscriptPanel.TranscriptText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontFamily="Cascadia Code" />

                            <!-- Hidden protocol buffer is retained for logging/export and the protocol dialog. -->
                            <TextBox x:Name="TxtProtocol"
                                     Grid.Column="0"
                                     Visibility="Collapsed"
                                     IsReadOnly="True"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     Text="{Binding TranscriptPanel.ProtocolText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontFamily="Cascadia Code" />

                            <Border x:Name="TranscriptLoadingOverlay"
                                    Grid.Column="0"
                                    Panel.ZIndex="10"
                                    Visibility="{Binding TranscriptPanel.LoadingOverlayVisibility}"
                                    Background="{DynamicResource SurfaceRaisedBrush}"
                                    BorderBrush="{DynamicResource BorderStrongBrush}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <StackPanel Width="230">
                                    <ProgressBar IsIndeterminate="True"
                                                 Height="7"
                                                 Foreground="{DynamicResource AccentBrush}"
                                                 Background="{DynamicResource SurfaceContrastBrush}" />
                                    <TextBlock x:Name="LblTranscriptLoading"
                                               Margin="0,10,0,0"
                                               HorizontalAlignment="Center"
                                               Text="{Binding TranscriptPanel.LoadingText}"
                                               Style="{StaticResource CaptionTextStyle}" />
                                </StackPanel>
                            </Border>
                            </Grid>

                        </Grid>
                    </Border>

                    <Border Grid.Row="3"
                            Style="{x:Null}"
                            Effect="{x:Null}"
                            CornerRadius="14"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource TurnInputGlassOuterBorderBrush}"
                            Background="{DynamicResource TurnInputGlassOuterBackgroundBrush}">
                        <Grid>
                            <Border Style="{x:Null}"
                                    CornerRadius="14"
                                    Background="{x:Null}"
                                    BorderBrush="{DynamicResource TurnInputGlassInnerBorderBrush}"
                                    BorderThickness="1"
                                    Margin="1" />
                            <Border Style="{x:Null}"
                                    CornerRadius="13"
                                    Margin="1"
                                    Opacity="0.9">
                                <Border.Background>
                                    <DynamicResource ResourceKey="TurnInputGlassFillBrush" />
                                </Border.Background>
                            </Border>
                            <Border Style="{x:Null}"
                                    CornerRadius="13"
                                    Margin="1"
                                    VerticalAlignment="Top"
                                    Height="18"
                                    IsHitTestVisible="False">
                                <Border.Background>
                                    <DynamicResource ResourceKey="TurnInputGlassSheenBrush" />
                                </Border.Background>
                            </Border>

                        <Grid Margin="12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border x:Name="InlineApprovalCard"
                                    Grid.Row="0"
                                    BorderBrush="{DynamicResource ApprovalCardBorderBrush}"
                                    BorderThickness="1"
                                    Background="{DynamicResource ApprovalCardBackgroundBrush}"
                                    CornerRadius="10"
                                    Padding="10"
                                    Margin="0,0,0,12"
                                    Visibility="{Binding ApprovalPanel.CardVisibility}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBox x:Name="TxtApproval"
                                             Grid.Row="0"
                                             Height="118"
                                             IsReadOnly="True"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"
                                             Text="{Binding ApprovalPanel.SummaryText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Background="{DynamicResource ApprovalInputBackgroundBrush}"
                                             BorderBrush="{DynamicResource ApprovalCardBorderBrush}" />

                                    <WrapPanel Grid.Row="1" Margin="0,10,0,0">
                                        <Button x:Name="BtnApprovalAccept"
                                                Content="Accept"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Margin="0,0,6,6"
                                                IsEnabled="{Binding ApprovalPanel.CanAccept}"
                                                Command="{Binding ApprovalPanel.AcceptCommand}" />
                                        <Button x:Name="BtnApprovalAcceptSession"
                                                Content="Accept Session"
                                                Style="{StaticResource ButtonBaseStyle}"
                                                Margin="0,0,6,6"
                                                IsEnabled="{Binding ApprovalPanel.CanAcceptSession}"
                                                Command="{Binding ApprovalPanel.AcceptSessionCommand}" />
                                        <Button x:Name="BtnApprovalDecline"
                                                Content="Decline"
                                                Style="{StaticResource ButtonBaseStyle}"
                                                Margin="0,0,6,6"
                                                IsEnabled="{Binding ApprovalPanel.CanDecline}"
                                                Command="{Binding ApprovalPanel.DeclineCommand}" />
                                        <Button x:Name="BtnApprovalCancel"
                                                Content="Cancel Turn"
                                                Style="{StaticResource DangerButtonStyle}"
                                                Margin="0,0,6,6"
                                                IsEnabled="{Binding ApprovalPanel.CanCancel}"
                                                Command="{Binding ApprovalPanel.CancelCommand}" />
                                    </WrapPanel>
                                </Grid>
                            </Border>

                            <Grid Grid.Row="1">
                                <TextBox x:Name="TxtTurnInput"
                                         Height="56"
                                         MinHeight="56"
                                         MaxHeight="56"
                                         MinLines="2"
                                         MaxLines="2"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         Text="{Binding TurnComposer.InputText, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding TurnComposer.IsInputEnabled}"
                                         Background="Transparent"
                                         BorderBrush="Transparent"
                                         BorderThickness="0"
                                         Padding="0" />

                                <TextBlock Text="Type a prompt for Codex..."
                                           Margin="2,1,14,0"
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TxtTurnInput}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <WrapPanel Grid.Column="0" VerticalAlignment="Center">
                                    <Border x:Name="TurnComposerPickersContainer"
                                            Width="434"
                                            Margin="0,0,0,0"
                                            VerticalAlignment="Center"
                                            ClipToBounds="True"
                                            Background="Transparent">
                                        <StackPanel x:Name="TurnComposerPickersContent"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center">
                                            <ComboBox x:Name="CmbModel"
                                                      Width="260"
                                                      Margin="0,0,12,6"
                                                      IsEnabled="{Binding TurnComposer.IsModelEnabled}"
                                                      SelectedValuePath="Id"
                                                      SelectedValue="{Binding TurnComposer.SelectedModelId, Mode=TwoWay}" />

                                            <ComboBox x:Name="CmbReasoningEffort"
                                                      Width="150"
                                                      Margin="0,0,12,6"
                                                      IsEnabled="{Binding TurnComposer.IsReasoningEnabled}"
                                                      SelectedValuePath="Content"
                                                      SelectedValue="{Binding TurnComposer.SelectedReasoningEffort, Mode=TwoWay}">
                                                <ComboBoxItem Content="minimal" />
                                                <ComboBoxItem Content="low" />
                                                <ComboBoxItem Content="medium" />
                                                <ComboBoxItem Content="high" />
                                                <ComboBoxItem Content="xhigh" />
                                            </ComboBox>
                                        </StackPanel>
                                    </Border>

                                    <Button x:Name="BtnTurnComposerPickersToggle"
                                            Style="{StaticResource ButtonBaseStyle}"
                                            Width="34"
                                            MinWidth="34"
                                            Padding="0"
                                            Margin="0,0,8,6"
                                            ToolTip="Collapse model and reasoning">
                                        <TextBlock x:Name="TxtTurnComposerPickersToggleGlyph"
                                                   Text="&#xE76C;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="14"
                                                   LineHeight="14"
                                                   LineStackingStrategy="BlockLineHeight"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center" />
                                    </Button>
                                </WrapPanel>

                                <WrapPanel Grid.Column="1" VerticalAlignment="Center">
                                    <Button x:Name="BtnTurnSteer"
                                            Content="Steer Active Turn"
                                            Style="{StaticResource ButtonBaseStyle}"
                                            Margin="0,0,6,6"
                                            Command="{Binding TurnComposer.SteerTurnCommand}" />
                                    <Button x:Name="BtnTurnStart"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Width="42"
                                            MinWidth="42"
                                            Padding="0"
                                            Margin="0,0,0,6"
                                            Visibility="{Binding TurnComposer.StartTurnVisibility}"
                                            Command="{Binding TurnComposer.StartTurnCommand}"
                                            ToolTip="Send (Ctrl+Enter)">
                                        <Image Source="pack://application:,,,/Assets/send-input.png"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform" />
                                    </Button>
                                    <Button x:Name="BtnTurnInterrupt"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Width="42"
                                            MinWidth="42"
                                            Padding="0"
                                            Margin="0,0,0,6"
                                            Visibility="{Binding TurnComposer.InterruptTurnVisibility}"
                                            Command="{Binding TurnComposer.InterruptTurnCommand}"
                                            ToolTip="Interrupt">
                                        <Image Source="pack://application:,,,/Assets/interrupt.png"
                                               Width="14"
                                               Height="14"
                                               Stretch="Uniform" />
                                    </Button>
                                </WrapPanel>
                            </Grid>
                        </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
</UserControl>
