                                                AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetName="ActivePulseLine"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0.16"
                                                         To="0.7"
                                                         Duration="0:0:1.15" />
                                        <DoubleAnimation Storyboard.TargetName="ActivePulseScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         From="0.985"
                                                         To="1"
                                                         Duration="0:0:1.15" />
                                    </Storyboard>
                                </ControlTemplate.Resources>
                                <Grid Background="Transparent">
                                    <Border x:Name="SplitterLine"
                                            Height="1"
                                            VerticalAlignment="Center"
                                            Background="{DynamicResource BorderBrush}"
                                            Opacity="0.6" />
                                    <Border x:Name="ActivePulseLine"
                                            Height="3"
                                            Margin="10,0,10,0"
                                            VerticalAlignment="Center"
                                            Background="{DynamicResource AccentBrush}"
                                            CornerRadius="2"
                                            Opacity="0"
                                            IsHitTestVisible="False"
