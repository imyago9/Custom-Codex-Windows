<UserControl x:Class="CodexNativeAgent.Ui.WorkspacePaneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
            <UserControl.Resources>
                <Style x:Key="TurnComposerHoverToolTipStyle" TargetType="ToolTip">
                    <Setter Property="Background" Value="{DynamicResource TranscriptBubbleGlassStrongBrush}" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Padding" Value="10,7" />
                </Style>
                <Style x:Key="NoOutlineBubbleComboBoxItemStyle"
                       TargetType="ComboBoxItem"
                       BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="ItemChrome"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="ItemChrome" Property="Background" Value="{DynamicResource TranscriptBubbleGlassStrongBrush}" />
                                        <Setter TargetName="ItemChrome" Property="BorderBrush" Value="Transparent" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemChrome" Property="Background" Value="{DynamicResource TranscriptBubbleGlassStrongBrush}" />
                                        <Setter TargetName="ItemChrome" Property="BorderBrush" Value="Transparent" />
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="ItemChrome" Property="Opacity" Value="0.55" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </UserControl.Resources>
            <Border
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="{DynamicResource MainShellPadding}">
                <Grid x:Name="WorkspaceLayoutRoot">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" MinHeight="260" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition x:Name="TurnComposerHostRow"
                                       Height="136"
                                       MinHeight="136" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="0,0,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="0"
                                       Margin="14,-2,0,0">
                                <DockPanel.Resources>
                                    <Style x:Key="QuickIconButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="MinWidth" Value="34" />
                                        <Setter Property="MinHeight" Value="34" />
                                        <Setter Property="Padding" Value="6" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Border x:Name="QuickIconButtonGlass"
                                                                CornerRadius="10"
                                                                Background="Transparent"
                                                                BorderBrush="Transparent"
                                                                BorderThickness="1" />
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"
                                                                          Margin="{TemplateBinding Padding}" />
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="QuickIconButtonGlass" Property="Background" Value="{DynamicResource WorkspaceHeaderGlassQuickHoverBackgroundBrush}" />
                                                            <Setter TargetName="QuickIconButtonGlass" Property="BorderBrush" Value="{DynamicResource WorkspaceHeaderGlassQuickHoverBorderBrush}" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="QuickIconButtonGlass" Property="Background" Value="{DynamicResource WorkspaceHeaderGlassQuickPressedBackgroundBrush}" />
                                                            <Setter TargetName="QuickIconButtonGlass" Property="BorderBrush" Value="{DynamicResource WorkspaceHeaderGlassQuickPressedBorderBrush}" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DockPanel.Resources>

                                <StackPanel DockPanel.Dock="Left"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Top">
                                    <Button x:Name="BtnQuickToggleThreadsPanel"
                                            Style="{StaticResource QuickIconButtonStyle}"
                                            ToolTip="Hide threads panel"
                                            Margin="0,0,10,0">
                                        <Rectangle Width="16"
                                                   Height="16"
                                                   Fill="{DynamicResource TextSecondaryBrush}">
                                            <Rectangle.OpacityMask>
                                                <ImageBrush x:Name="BrushThreadsPanelToggleIconMask"
                                                            ImageSource="pack://application:,,,/Assets/hide-threads-white.png"
                                                            Stretch="Uniform" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Button>

                                    <StackPanel>
                                    <TextBlock x:Name="LblCurrentThread"
                                               Text="{Binding CurrentThreadText}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Visibility="Collapsed" />
                                    <TextBlock x:Name="LblCurrentTurn"
                                               Text="{Binding CurrentTurnText}"
                                               Margin="0,3,0,0"
                                               Style="{StaticResource CaptionTextStyle}"
                                               Visibility="Collapsed" />
                                    <Border Margin="0,8,0,0"
                                            Padding="7,4"
                                            CornerRadius="8"
                                            Background="{DynamicResource SurfaceMutedBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            Visibility="{Binding TranscriptPanel.TokenUsageVisibility}">
                                        <TextBlock Text="{Binding TranscriptPanel.TokenUsageText}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                                    </Border>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                                    <Button x:Name="BtnQuickOpenVsc"
                                            Style="{StaticResource QuickIconButtonStyle}"
                                            ToolTip="Open in VS Code"
                                            Margin="0,0,6,0"
                                            IsEnabled="{Binding IsQuickOpenVscEnabled}">
                                        <Image Source="pack://application:,,,/Assets/vs-code.png"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    </Button>
                                    <Button x:Name="BtnQuickOpenTerminal"
                                            Style="{StaticResource QuickIconButtonStyle}"
                                            ToolTip="Open PowerShell here"
                                            Margin="0,0,6,0"
                                            IsEnabled="{Binding IsQuickOpenTerminalEnabled}">
                                        <Image Source="{DynamicResource WorkspaceTerminalIconImageSource}"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    </Button>
                                    <Button x:Name="BtnQuickOpenGit"
                                            Style="{StaticResource QuickIconButtonStyle}"
                                            ToolTip="Toggle Git panel"
                                            IsEnabled="{Binding IsQuickOpenTerminalEnabled}">
                                        <Image Source="{DynamicResource WorkspaceGitIconImageSource}"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    </Button>
                                </StackPanel>
                            </DockPanel>

                        </Grid>
                    </Grid>

                    <Border x:Name="WorkspaceHintBanner"
                            Grid.Row="1"
                            Background="{DynamicResource AccentSubtleBrush}"
                            BorderBrush="{DynamicResource AccentGlowBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="11,8"
                            Margin="0,0,0,12">
                        <TextBlock x:Name="LblWorkspaceHint"
                                   Text="{Binding WorkspaceHintText}"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                    </Border>

                    <Border Grid.Row="2"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="10"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Image x:Name="ImgTimeToBuildEmptyState"
                                       Source="{DynamicResource WorkspaceTimeToBuildEmptyStateImageSource}"
                                       Visibility="Collapsed"
                                       IsHitTestVisible="False"
                                       Stretch="Uniform"
                                       Opacity="0.9"
                                       MaxWidth="520"
                                       MaxHeight="320"
                                       Margin="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                                <Border x:Name="WorkspaceHintOverlay"
                                        Visibility="Collapsed"
                                        Panel.ZIndex="9"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Margin="16"
                                        MaxWidth="720"
                                        Background="{DynamicResource AccentSubtleBrush}"
                                        BorderBrush="{DynamicResource AccentGlowBrush}"
                                        BorderThickness="1"
                                        CornerRadius="11"
                                        Padding="12,10">
                                    <DockPanel LastChildFill="True">
                                        <Button x:Name="BtnDismissWorkspaceHintOverlay"
                                                DockPanel.Dock="Right"
                                                Width="18"
                                                Height="18"
                                                MinWidth="18"
                                                MinHeight="18"
                                                Margin="8,0,0,0"
                                                Padding="0"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                ToolTip="Dismiss hint">
                                            <TextBlock Text="x"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Button>

                                        <TextBlock x:Name="LblWorkspaceHintOverlay"
                                                   Text="{Binding WorkspaceHintText}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Margin="0,0,2,0" />
                                    </DockPanel>
                                </Border>

                                <ListBox x:Name="LstTranscript"
                                     ItemsSource="{Binding TranscriptPanel.Items}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="14.4"
                                     HorizontalContentAlignment="Stretch"
                                      ScrollViewer.CanContentScroll="False"
                                      VirtualizingPanel.IsVirtualizing="False"
                                      VirtualizingPanel.VirtualizationMode="Standard"
                                      VirtualizingPanel.ScrollUnit="Pixel"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     SelectionMode="Single">
                                <ListBox.Resources>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Focusable" Value="False" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <Style x:Key="TranscriptBadgeTextStyle" TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="15.8" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
                                    </Style>
                                    <Style x:Key="TranscriptBodyTextStyle" TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                        <Setter Property="FontFamily" Value="{Binding BodyFontFamily}" />
                                        <Setter Property="FontSize" Value="16.6" />
                                        <Setter Property="LineHeight" Value="28" />
                                    </Style>
                                    <Style x:Key="TranscriptSelectableTextBoxStyle" TargetType="TextBox">
                                        <Setter Property="IsReadOnly" Value="True" />
                                        <Setter Property="IsReadOnlyCaretVisible" Value="False" />
                                        <Setter Property="IsTabStop" Value="False" />
                                        <Setter Property="AcceptsReturn" Value="True" />
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="SpellCheck.IsEnabled" Value="False" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="MinWidth" Value="0" />
                                        <Setter Property="MinHeight" Value="0" />
                                        <Setter Property="VerticalContentAlignment" Value="Top" />
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                        <Setter Property="FontSize" Value="16.6" />
                                        <Setter Property="Cursor" Value="IBeam" />
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                        <Setter Property="VerticalScrollBarVisibility" Value="Disabled" />
                                        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
                                    </Style>
                                    <Style x:Key="TranscriptSelectableBodyTextBoxStyle"
                                           TargetType="TextBox"
                                           BasedOn="{StaticResource TranscriptSelectableTextBoxStyle}">
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                        <Setter Property="FontFamily" Value="{Binding BodyFontFamily}" />
                                    </Style>
                                    <Style x:Key="TranscriptSelectableCommandDetailsTextBoxStyle"
                                           TargetType="TextBox"
                                           BasedOn="{StaticResource TranscriptSelectableTextBoxStyle}">
                                        <Setter Property="MaxHeight" Value="320" />
                                        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                                    </Style>
                                </ListBox.Resources>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,10"
                                              Opacity="{Binding RowOpacity}"
                                              Visibility="{Binding RowVisibility}">
                                            <Grid.LayoutTransform>
                                                <ScaleTransform ScaleX="{Binding DataContext.TranscriptPanel.TranscriptContentScale, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                                ScaleY="{Binding DataContext.TranscriptPanel.TranscriptContentScale, RelativeSource={RelativeSource AncestorType=ListBox}}" />
                                            </Grid.LayoutTransform>
                                            <Grid x:Name="BubbleRow">
                                                <Border x:Name="BubbleChrome"
                                                        HorizontalAlignment="Left"
                                                        MaxWidth="{Binding DataContext.TranscriptPanel.TranscriptBubbleMaxWidth, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        Padding="12,10"
                                                        CornerRadius="14"
                                                        Background="{DynamicResource TranscriptBubbleGlassBrush}"
                                                        BorderBrush="Transparent"
                                                        BorderThickness="0">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="False" Margin="0,0,0,5">
                                                            <TextBox Text="{Binding TimestampText}"
                                                                     Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                     DockPanel.Dock="Right"
                                                                     Visibility="{Binding TimestampVisibility}"
                                                                     Foreground="{DynamicResource TextTertiaryBrush}"
                                                                     FontSize="15"
                                                                     AcceptsReturn="False"
                                                                     TextWrapping="NoWrap" />
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBox Text="{Binding RoleText}"
                                                                         Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                         Visibility="{Binding RoleVisibility}"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                                         FontSize="15"
                                                                         FontWeight="SemiBold"
                                                                         Margin="0,0,6,0"
                                                                         AcceptsReturn="False"
                                                                         TextWrapping="NoWrap" />
                                                                <TextBox Text="{Binding StreamingIndicatorText}"
                                                                         Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                         Visibility="{Binding StreamingIndicatorVisibility}"
                                                                         Foreground="{DynamicResource TextTertiaryBrush}"
                                                                         FontSize="15"
                                                                         AcceptsReturn="False"
                                                                         TextWrapping="NoWrap" />
                                                            </StackPanel>
                                                        </DockPanel>

                                                        <TextBox Text="{Binding BodyText}"
                                                                 Style="{StaticResource TranscriptSelectableBodyTextBoxStyle}" />

                                                        <TextBox Text="{Binding SecondaryText}"
                                                                 Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                 Visibility="{Binding SecondaryVisibility}"
                                                                 Margin="0,5,0,0"
                                                                 Foreground="{DynamicResource TextTertiaryBrush}"
                                                                 FontSize="15.8" />

                                                        <Border x:Name="BubbleDetailsChrome"
                                                                Visibility="{Binding DetailsVisibility}"
                                                                Margin="0,8,0,0"
                                                                Padding="10,8"
                                                                Background="{DynamicResource TranscriptBubbleGlassInsetBrush}"
                                                                BorderBrush="Transparent"
                                                                BorderThickness="0"
                                                                CornerRadius="10">
                                                            <TextBox Text="{Binding DetailsText}"
                                                                     Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                                                     FontFamily="{Binding DetailsFontFamily}" />
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>

                                            <Grid x:Name="ActivityRow" Visibility="Collapsed" Margin="2,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition x:Name="ActivityGutterColumn" Width="18" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0">
                                                    <Border x:Name="ActivityLine"
                                                            Width="2"
                                                            CornerRadius="1"
                                                            Background="{DynamicResource BorderBrush}"
                                                            Opacity="0.55"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,16,0,0" />
                                                    <Ellipse x:Name="ActivityDot"
                                                             Width="8"
                                                             Height="8"
                                                             Fill="{DynamicResource TextTertiaryBrush}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Top"
                                                             Margin="0,8,0,0" />
                                                </Grid>

                                                <Border x:Name="ActivityChrome"
                                                        Grid.Column="1"
                                                        Padding="10,8"
                                                        CornerRadius="10"
                                                        Background="{DynamicResource TranscriptActivityGlassBrush}"
                                                        BorderBrush="Transparent"
                                                        BorderThickness="0"
                                                        MaxWidth="{Binding DataContext.TranscriptPanel.TranscriptActivityMaxWidth, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        HorizontalAlignment="Left">
                                                    <StackPanel>
                                                        <DockPanel LastChildFill="True" Margin="0,0,0,4">
                                                            <TextBox Text="{Binding TimestampText}"
                                                                     Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                     DockPanel.Dock="Right"
                                                                     Visibility="{Binding TimestampVisibility}"
                                                                     Foreground="{DynamicResource TextTertiaryBrush}"
                                                                     FontSize="15"
                                                                     AcceptsReturn="False"
                                                                     TextWrapping="NoWrap" />
                                                            <StackPanel Orientation="Horizontal"
                                                                        DockPanel.Dock="Right"
                                                                        Margin="0,0,8,0"
                                                                        Visibility="{Binding ChangeStatsVisibility}">
                                                                <TextBox Text="{Binding AddedLinesText}"
                                                                         Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                         Visibility="{Binding AddedLinesVisibility}"
                                                                         Foreground="{DynamicResource SuccessBrush}"
                                                                         FontSize="15"
                                                                         FontWeight="SemiBold"
                                                                         Margin="0,0,8,0"
                                                                         AcceptsReturn="False"
                                                                         TextWrapping="NoWrap" />
                                                                <TextBox Text="{Binding RemovedLinesText}"
                                                                         Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                         Visibility="{Binding RemovedLinesVisibility}"
                                                                         Foreground="{DynamicResource DangerBrush}"
                                                                         FontSize="15"
                                                                         FontWeight="SemiBold"
                                                                         AcceptsReturn="False"
                                                                         TextWrapping="NoWrap" />
                                                            </StackPanel>
                                                            <Grid x:Name="ActivityHeaderTextRow">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBox x:Name="ActivityRoleText"
                                                                         Grid.Column="0"
                                                                         Text="{Binding RoleText}"
                                                                         Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                         Visibility="{Binding RoleVisibility}"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                                         FontSize="15"
                                                                         FontWeight="SemiBold"
                                                                         Margin="0,0,6,0"
                                                                         AcceptsReturn="False"
                                                                         TextWrapping="NoWrap" />

                                                                <TextBox x:Name="ActivityInlineBodyText"
                                                                         Grid.Column="1"
                                                                         Text="{Binding BodyText}"
                                                                         Style="{StaticResource TranscriptSelectableBodyTextBoxStyle}"
                                                                         Visibility="Collapsed"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                                         Margin="0,0,6,0" />

                                                                <TextBox x:Name="ActivityStreamingText"
                                                                         Grid.Column="2"
                                                                         Text="{Binding StreamingIndicatorText}"
                                                                         Style="{StaticResource TranscriptSelectableTextBoxStyle}"
                                                                         Visibility="{Binding StreamingIndicatorVisibility}"
                                                                         Foreground="{DynamicResource TextTertiaryBrush}"
                                                                         FontSize="15"
                                                                         AcceptsReturn="False"
                                                                         TextWrapping="NoWrap" />
                                                            </Grid>
                                                        </DockPanel>

                                                        <Grid x:Name="ActivityBodyRow">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <Border x:Name="ActivityBodyChip"
                                                                    Grid.Column="0"
                                                                    Visibility="{Binding ActivityBodyChipVisibility}"
                                                                    Padding="8,6"
                                                                    CornerRadius="8"
                                                                    Background="{DynamicResource TranscriptBubbleGlassInsetBrush}"
                                                                    BorderBrush="Transparent"
                                                                    BorderThickness="0">
                                                                <TextBox x:Name="ActivityBodyChipText"
                                                                         Text="{Binding BodyText}"
                                                                         Style="{StaticResource TranscriptSelectableBodyTextBoxStyle}"
                                                                         Foreground="{DynamicResource TextSecondaryBrush}"
                                                                         Margin="0" />
                                                            </Border>

                                                            <ItemsControl x:Name="ActivityFileChangeList"
                                                                          Grid.Column="0"
                                                                          ItemsSource="{Binding FileChangeItems}"
                                                                          HorizontalAlignment="Stretch"
                                                                          Visibility="{Binding FileChangeListVisibility}">
                                                                <ItemsControl.ItemContainerStyle>
                                                                    <Style TargetType="ContentPresenter">
                                                                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                                    </Style>
                                                                </ItemsControl.ItemContainerStyle>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid Margin="0,0,0,4" HorizontalAlignment="Stretch">
                                                                            <Border x:Name="ActivityFileChangePathChip"
                                                                                    Visibility="{Binding PathVisibility}"
                                                                                    Background="{DynamicResource TranscriptBubbleGlassInsetBrush}"
                                                                                    BorderBrush="Transparent"
                                                                                    BorderThickness="0"
                                                                                    CornerRadius="8"
                                                                                    Padding="8,6"
                                                                                    HorizontalAlignment="Stretch"
                                                                                    ToolTip="{Binding FullPathText}">
                                                                                <Grid MinWidth="0" ClipToBounds="True">
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="Auto" />
                                                                                        <ColumnDefinition Width="*" MinWidth="0" />
                                                                                        <ColumnDefinition Width="Auto" />
                                                                                    </Grid.ColumnDefinitions>

                                                                                    <Grid Grid.Column="0"
                                                                                          Width="18"
                                                                                          Height="18"
                                                                                          Margin="0,0,8,0"
                                                                                          VerticalAlignment="Center">
                                                                                        <Image Source="{Binding FileIconSource}"
                                                                                               Width="16"
                                                                                               Height="16"
                                                                                               Stretch="Uniform"
                                                                                               SnapsToDevicePixels="True"
                                                                                               Visibility="{Binding FileIconVisibility}"
                                                                                               HorizontalAlignment="Center"
                                                                                               VerticalAlignment="Center" />
                                                                                        <TextBlock Text="&#xE8A5;"
                                                                                                   FontFamily="Segoe MDL2 Assets"
                                                                                                   FontSize="10"
                                                                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                                                                   Visibility="{Binding FileIconFallbackVisibility}"
                                                                                                   HorizontalAlignment="Center"
                                                                                                   VerticalAlignment="Center"
                                                                                                   LineHeight="10" />
                                                                                    </Grid>

                                                                                    <Grid Grid.Column="1"
                                                                                          MinWidth="0"
                                                                                          Margin="0,0,10,0"
                                                                                          VerticalAlignment="Center">
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="Auto" />
                                                                                            <ColumnDefinition Width="*" MinWidth="0" />
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <TextBlock Grid.Column="0"
                                                                                                   Text="{Binding DisplayPathFileNameText}"
                                                                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                                                                   FontWeight="SemiBold"
                                                                                                   TextTrimming="CharacterEllipsis"
                                                                                                   TextWrapping="NoWrap"
                                                                                                   VerticalAlignment="Center"
                                                                                                   Margin="0,0,6,0" />

                                                                                        <TextBlock Grid.Column="1"
                                                                                                   Text="{Binding DisplayPathPrefixText}"
                                                                                                   Foreground="{DynamicResource TextTertiaryBrush}"
                                                                                                   TextTrimming="CharacterEllipsis"
                                                                                                   TextWrapping="NoWrap"
                                                                                                   VerticalAlignment="Center" />
                                                                                    </Grid>

                                                                                    <StackPanel Grid.Column="2"
                                                                                                Orientation="Horizontal"
                                                                                                VerticalAlignment="Center">
                                                                                        <TextBlock Text="{Binding AddedLinesText}"
                                                                                                   Visibility="{Binding AddedLinesVisibility}"
                                                                                                   Foreground="{DynamicResource SuccessBrush}"
                                                                                                   FontSize="13.2"
                                                                                                   FontWeight="SemiBold"
                                                                                                   Margin="0,0,8,0"
                                                                                                   VerticalAlignment="Center"
                                                                                                   LineHeight="13" />

                                                                                        <TextBlock Text="{Binding RemovedLinesText}"
                                                                                                   Visibility="{Binding RemovedLinesVisibility}"
                                                                                                   Foreground="{DynamicResource DangerBrush}"
                                                                                                   FontSize="13.2"
                                                                                                   FontWeight="SemiBold"
                                                                                                   VerticalAlignment="Center"
                                                                                                   LineHeight="13" />
                                                                                    </StackPanel>
                                                                                </Grid>
                                                                            </Border>

                                                                            <TextBlock x:Name="ActivityFileChangeOverflowText"
                                                                                       Text="{Binding OverflowText}"
