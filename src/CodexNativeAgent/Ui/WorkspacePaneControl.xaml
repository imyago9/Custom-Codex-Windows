                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border x:Name="InlineApprovalCard"
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    Background="{DynamicResource SurfaceRaisedBrush}"
                                    Focusable="True"
                                    CornerRadius="10"
                                    Padding="10"
                                    Margin="0"
                                    VerticalAlignment="Stretch"
                                    Visibility="{Binding ApprovalPanel.CardVisibility}">
                                <Border.Resources>
                                    <SolidColorBrush x:Key="ApprovalOptionNeutralBorderBrush" Color="#70808080" />
                                    <SolidColorBrush x:Key="ApprovalOptionSelectedBorderBrush" Color="#B09A9A9A" />
                                    <SolidColorBrush x:Key="ApprovalOptionSelectedBackgroundBrush" Color="#1C808080" />
                                </Border.Resources>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0">
                                        <TextBlock Text="Approval required for this thread"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                                        <TextBlock Margin="0,4,0,0"
                                                   Text="Use Up/Down to select, Enter to confirm, or press 1-5."
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                                    </StackPanel>

                                    <ScrollViewer Grid.Row="1"
                                                  Margin="0,10,0,0"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Disabled"
                                                  CanContentScroll="True">
                                        <StackPanel>
                                            <TextBlock Margin="0,0,0,10"
                                                       Text="{Binding ApprovalPanel.SummaryText}"
                                                       TextWrapping="Wrap"
                                                       Foreground="{DynamicResource TextSecondaryBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.SummaryText}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <Border Padding="10,8"
                                                    Margin="0,0,0,6"
                                                    CornerRadius="8"
                                                    BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionNeutralBorderBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.SelectedOptionNumber}" Value="1">
                                                                <Setter Property="Background" Value="{StaticResource ApprovalOptionSelectedBackgroundBrush}" />
                                                                <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionSelectedBorderBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.CanAccept}" Value="False">
                                                                <Setter Property="Opacity" Value="0.45" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="1. Accept"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           FontSize="11.5"
                                                           FontWeight="SemiBold" />
                                            </Border>

                                            <Border Padding="10,8"
                                                    Margin="0,0,0,6"
                                                    CornerRadius="8"
                                                    BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionNeutralBorderBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.SelectedOptionNumber}" Value="2">
                                                                <Setter Property="Background" Value="{StaticResource ApprovalOptionSelectedBackgroundBrush}" />
                                                                <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionSelectedBorderBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.CanAcceptSession}" Value="False">
                                                                <Setter Property="Opacity" Value="0.45" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="2. Accept Session"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           FontSize="11.5"
                                                           FontWeight="SemiBold" />
                                            </Border>

                                            <Border Padding="10,8"
                                                    Margin="0,0,0,6"
                                                    CornerRadius="8"
                                                    BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionNeutralBorderBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.SelectedOptionNumber}" Value="3">
                                                                <Setter Property="Background" Value="{StaticResource ApprovalOptionSelectedBackgroundBrush}" />
                                                                <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionSelectedBorderBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.CanAcceptAmended}" Value="False">
                                                                <Setter Property="Opacity" Value="0.45" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel>
                                                    <TextBlock Text="3. Accept + Amendment"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                                               FontSize="11.5"
                                                               FontWeight="SemiBold" />
                                                    <TextBlock Text="Available when an execpolicy amendment is provided."
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               FontSize="10.2" />
                                                </StackPanel>
                                            </Border>

                                            <Border Padding="10,8"
                                                    Margin="0,0,0,6"
                                                    CornerRadius="8"
                                                    BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionNeutralBorderBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.SelectedOptionNumber}" Value="4">
                                                                <Setter Property="Background" Value="{StaticResource ApprovalOptionSelectedBackgroundBrush}" />
                                                                <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionSelectedBorderBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.CanDecline}" Value="False">
                                                                <Setter Property="Opacity" Value="0.45" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="4. Decline"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           FontSize="11.5"
                                                           FontWeight="SemiBold" />
                                            </Border>

                                            <Border Padding="10,8"
                                                    Margin="0,0,0,4"
                                                    CornerRadius="8"
                                                    BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionNeutralBorderBrush}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.SelectedOptionNumber}" Value="5">
                                                                <Setter Property="Background" Value="{StaticResource ApprovalOptionSelectedBackgroundBrush}" />
                                                                <Setter Property="BorderBrush" Value="{StaticResource ApprovalOptionSelectedBorderBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ApprovalPanel.CanCancel}" Value="False">
                                                                <Setter Property="Opacity" Value="0.45" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="5. Cancel Turn"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           FontSize="11.5"
                                                           FontWeight="SemiBold" />
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>

                            <Grid x:Name="TurnComposerInputHost"
                                  Grid.Row="1"
                                  MinHeight="56">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ApprovalPanel.CardVisibility}" Value="Visible">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.Resources>
                                    <Style x:Key="TurnInputTextBoxStyle"
                                           TargetType="TextBox"
                                           BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Padding" Value="0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="BorderBrush" Value="Transparent" />
                                                <Setter Property="BorderThickness" Value="0" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Resources>
                                <TextBox x:Name="TxtTurnInput"
                                         MinHeight="56"
                                         MinLines="2"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         Text="{Binding TurnComposer.InputText, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding TurnComposer.IsInputEnabled}"
                                         Style="{StaticResource TurnInputTextBoxStyle}" />

                                <TextBlock Text="Type a prompt for Codex..."
                                           Margin="2,1,14,0"
                                           VerticalAlignment="Top"
                                           Foreground="{DynamicResource TextTertiaryBrush}"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TxtTurnInput}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <Grid x:Name="TurnComposerControlsHost"
                                  Grid.Row="2"
                                  Margin="0,10,0,0">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ApprovalPanel.CardVisibility}" Value="Visible">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.Resources>
                                    <Style x:Key="TurnComposerIconButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="MinHeight" Value="34" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Border x:Name="QuickIconButtonGlass"
                                                                CornerRadius="10"
                                                                Background="Transparent"
                                                                BorderBrush="Transparent"
                                                                BorderThickness="1" />
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"
                                                                          Margin="{TemplateBinding Padding}" />
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="QuickIconButtonGlass" Property="Background" Value="{DynamicResource WorkspaceHeaderGlassQuickHoverBackgroundBrush}" />
                                                            <Setter TargetName="QuickIconButtonGlass" Property="BorderBrush" Value="{DynamicResource WorkspaceHeaderGlassQuickHoverBorderBrush}" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="QuickIconButtonGlass" Property="Background" Value="{DynamicResource WorkspaceHeaderGlassQuickPressedBackgroundBrush}" />
                                                            <Setter TargetName="QuickIconButtonGlass" Property="BorderBrush" Value="{DynamicResource WorkspaceHeaderGlassQuickPressedBorderBrush}" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <Style x:Key="TurnComposerPickerComboBoxStyle"
                                           TargetType="ComboBox"
                                           BasedOn="{StaticResource {x:Type ComboBox}}">
                                        <Setter Property="Tag" Value="NoOutlineBubble" />
                                        <Setter Property="Background" Value="{DynamicResource TranscriptBubbleGlassStrongBrush}" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="ItemContainerStyle" Value="{StaticResource NoOutlineBubbleComboBoxItemStyle}" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0"
                                      Grid.Column="0"
                                      VerticalAlignment="Center">
                                    <WrapPanel VerticalAlignment="Center">
                                        <Border x:Name="TurnComposerPickersContainer"
                                                Width="434"
                                                Margin="0,0,0,0"
                                                VerticalAlignment="Center"
                                                ClipToBounds="True"
                                                Background="Transparent">
                                            <StackPanel x:Name="TurnComposerPickersContent"
                                                        Orientation="Vertical"
                                                        VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal"
                                                            VerticalAlignment="Center">
                                                    <ComboBox x:Name="CmbModel"
                                                              Style="{StaticResource TurnComposerPickerComboBoxStyle}"
                                                              Width="260"
                                                              Margin="0,0,12,6"
                                                              IsEnabled="{Binding TurnComposer.IsModelEnabled}"
                                                              SelectedValuePath="Id"
                                                              SelectedValue="{Binding TurnComposer.SelectedModelId, Mode=TwoWay}" />

                                                    <ComboBox x:Name="CmbReasoningEffort"
                                                              Style="{StaticResource TurnComposerPickerComboBoxStyle}"
                                                              Width="150"
                                                              Margin="0,0,12,6"
                                                              IsEnabled="{Binding TurnComposer.IsReasoningEnabled}"
                                                              SelectedValuePath="Content"
                                                              SelectedValue="{Binding TurnComposer.SelectedReasoningEffort, Mode=TwoWay}">
                                                        <ComboBoxItem Content="minimal" />
                                                        <ComboBoxItem Content="low" />
                                                        <ComboBoxItem Content="medium" />
                                                        <ComboBoxItem Content="high" />
                                                        <ComboBoxItem Content="xhigh" />
                                                    </ComboBox>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>

                                        <Button x:Name="BtnTurnComposerPickersToggle"
                                                Style="{StaticResource TurnComposerIconButtonStyle}"
                                                Width="34"
                                                MinWidth="34"
                                                Padding="0"
                                                Margin="0,0,8,6"
                                                ToolTip="Collapse model and reasoning">
                                            <TextBlock x:Name="TxtTurnComposerPickersToggleGlyph"
                                                       Text="&#xE76C;"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       FontSize="14"
                                                       LineHeight="14"
                                                       LineStackingStrategy="BlockLineHeight"
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center" />
                                        </Button>
                                    </WrapPanel>
                                </Grid>

                                <Grid Grid.Row="0"
                                      Grid.Column="1"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Button x:Name="BtnTurnSteer"
                                            Grid.Column="0"
                                            Style="{StaticResource TurnComposerIconButtonStyle}"
                                            Width="42"
                                            MinWidth="42"
                                            Padding="0"
                                            Margin="0,0,6,6"
                                            Visibility="{Binding TurnComposer.InterruptTurnVisibility}"
                                            Command="{Binding TurnComposer.SteerTurnCommand}"
                                            ToolTip="Steer active turn">
                                        <Image Source="{DynamicResource TurnSteerIconImageSource}"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform" />
                                    </Button>
                                    <Button x:Name="BtnTurnStart"
                                            Grid.Column="1"
                                            Style="{StaticResource TurnComposerIconButtonStyle}"
                                            Width="42"
                                            MinWidth="42"
                                            Padding="0"
                                            Margin="0,0,0,6"
                                            Visibility="{Binding TurnComposer.StartTurnVisibility}"
                                            Command="{Binding TurnComposer.StartTurnCommand}"
                                            ToolTip="Send (Ctrl+Enter)">
                                        <Image Source="{DynamicResource TurnSendIconImageSource}"
                                               Width="16"
                                               Height="16"
                                               Stretch="Uniform" />
                                    </Button>
                                    <Button x:Name="BtnTurnInterrupt"
                                            Grid.Column="1"
                                            Style="{StaticResource TurnComposerIconButtonStyle}"
                                            Width="42"
                                            MinWidth="42"
                                            Padding="0"
                                            Margin="0,0,0,6"
                                            Visibility="{Binding TurnComposer.InterruptTurnVisibility}"
                                            Command="{Binding TurnComposer.InterruptTurnCommand}"
                                            ToolTip="Interrupt">
                                        <Image Source="{DynamicResource TurnInterruptIconImageSource}"
                                               Width="14"
                                               Height="14"
                                               Stretch="Uniform" />
                                    </Button>
                                </Grid>

                                <Grid Grid.Row="1"
                                      Grid.ColumnSpan="2"
                                      Margin="0,2,0,0"
                                      VerticalAlignment="Bottom"
                                      Visibility="{Binding TurnComposer.UsageIndicatorsVisibility}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel x:Name="TurnComposerRateLimitIndicatorsHost"
                                                Grid.Column="0"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding TurnComposer.RateLimitIndicatorsVisibility}">
                                        <Border Margin="0,0,0,0"
                                                Padding="6,4,4,3"
                                                CornerRadius="7"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                Background="{DynamicResource TranscriptBubbleGlassStrongBrush}"
                                                Visibility="{Binding TurnComposer.RegularRateLimitIndicatorsVisibility}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Margin="0,0,7,0"
                                                           Text="REG"
                                                           VerticalAlignment="Center"
                                                           FontSize="9.5"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <ItemsControl Grid.Column="1"
                                                              ItemsSource="{Binding TurnComposer.RegularRateLimitBars}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="0,0,8,0"
                                                                        Orientation="Horizontal"
                                                                        VerticalAlignment="Center"
                                                                        ToolTipService.InitialShowDelay="80"
                                                                        ToolTipService.BetweenShowDelay="50"
                                                                        ToolTipService.ShowDuration="45000">
                                                                <StackPanel.ToolTip>
                                                                    <ToolTip Style="{StaticResource TurnComposerHoverToolTipStyle}"
                                                                             Content="{Binding TooltipText}" />
                                                                </StackPanel.ToolTip>
                                                                <Grid Width="20"
                                                                      Height="20"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Center">
                                                                    <Ellipse Stroke="{DynamicResource BorderBrush}"
                                                                             StrokeThickness="2"
                                                                             Fill="Transparent" />
                                                                    <Ellipse Stroke="{Binding BarBrush}"
                                                                             StrokeThickness="2"
                                                                             Fill="Transparent"
                                                                             StrokeDashArray="{Binding RemainingStrokeDashArray}"
                                                                             StrokeStartLineCap="Round"
                                                                             StrokeEndLineCap="Round">
                                                                        <Ellipse.RenderTransform>
                                                                            <RotateTransform Angle="-90"
                                                                                             CenterX="10"
                                                                                             CenterY="10" />
                                                                        </Ellipse.RenderTransform>
                                                                    </Ellipse>
                                                                </Grid>
                                                                <TextBlock Margin="5,0,0,0"
                                                                           Text="{Binding ShortLabel}"
                                                                           HorizontalAlignment="Left"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="8.5"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <Border Width="1"
                                                Height="28"
                                                Margin="6,0,6,0"
                                                Background="{DynamicResource BorderBrush}"
                                                VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding TurnComposer.RegularRateLimitIndicatorsVisibility}" Value="Visible" />
                                                                <Condition Binding="{Binding TurnComposer.SparkRateLimitIndicatorsVisibility}" Value="Visible" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>

                                        <Border Margin="0,0,0,0"
                                                Padding="6,4,4,3"
                                                CornerRadius="7"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                Background="{DynamicResource TranscriptBubbleGlassStrongBrush}"
                                                Visibility="{Binding TurnComposer.SparkRateLimitIndicatorsVisibility}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Margin="0,0,7,0"
                                                           Text="SPK"
                                                           VerticalAlignment="Center"
                                                           FontSize="9.5"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                                <ItemsControl Grid.Column="1"
                                                              ItemsSource="{Binding TurnComposer.SparkRateLimitBars}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="0,0,8,0"
                                                                        Orientation="Horizontal"
                                                                        VerticalAlignment="Center"
                                                                        ToolTipService.InitialShowDelay="80"
                                                                        ToolTipService.BetweenShowDelay="50"
                                                                        ToolTipService.ShowDuration="45000">
                                                                <StackPanel.ToolTip>
                                                                    <ToolTip Style="{StaticResource TurnComposerHoverToolTipStyle}"
                                                                             Content="{Binding TooltipText}" />
                                                                </StackPanel.ToolTip>
                                                                <Grid Width="20"
                                                                      Height="20"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Center">
                                                                    <Ellipse Stroke="{DynamicResource BorderBrush}"
                                                                             StrokeThickness="2"
                                                                             Fill="Transparent" />
                                                                    <Ellipse Stroke="{Binding BarBrush}"
                                                                             StrokeThickness="2"
                                                                             Fill="Transparent"
                                                                             StrokeDashArray="{Binding RemainingStrokeDashArray}"
                                                                             StrokeStartLineCap="Round"
                                                                             StrokeEndLineCap="Round">
                                                                        <Ellipse.RenderTransform>
                                                                            <RotateTransform Angle="-90"
                                                                                             CenterX="10"
                                                                                             CenterY="10" />
                                                                        </Ellipse.RenderTransform>
                                                                    </Ellipse>
                                                                </Grid>
                                                                <TextBlock Margin="5,0,0,0"
                                                                           Text="{Binding ShortLabel}"
                                                                           HorizontalAlignment="Left"
                                                                           VerticalAlignment="Center"
                                                                           FontSize="8.5"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                            Width="24"
                                            Height="24"
                                            Margin="8,0,0,0"
                                            Background="Transparent"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding TurnComposer.ContextUsageVisibility}"
                                            ToolTipService.InitialShowDelay="60"
                                            ToolTipService.BetweenShowDelay="50"
                                            ToolTipService.ShowDuration="45000">
                                        <Border.ToolTip>
                                            <ToolTip Style="{StaticResource TurnComposerHoverToolTipStyle}">
                                                <TextBlock Text="{Binding TurnComposer.ContextUsageTooltipText}"
                                                           TextWrapping="Wrap"
                                                           MaxWidth="340" />
                                            </ToolTip>
                                        </Border.ToolTip>
                                        <Grid Width="24"
                                              Height="24"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                            <Ellipse Stroke="{DynamicResource BorderBrush}"
                                                     StrokeThickness="2.4"
                                                     Fill="Transparent" />
                                            <Ellipse Stroke="{DynamicResource TextTertiaryBrush}"
                                                     StrokeThickness="2.4"
                                                     Fill="Transparent"
                                                     StrokeDashArray="{Binding TurnComposer.ContextUsageStrokeDashArray}"
                                                     StrokeStartLineCap="Round"
                                                     StrokeEndLineCap="Round">
                                                <Ellipse.RenderTransform>
                                                    <RotateTransform Angle="-90"
